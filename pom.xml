<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>karlney.tetris-ai</groupId>
    <artifactId>tetris-game</artifactId>
    <packaging>jar</packaging>
    <version>0.1.0-SNAPSHOT</version>
    <name>tetris</name>
    <url>https://github.com/karlney/tetris-ai</url>

    <properties>
        <maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
        <build.timestamp>${maven.build.timestamp}</build.timestamp>
    </properties>

    <dependencies>

    </dependencies>


    <build>
        <finalName>${finalName}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>*.properties</include>
                    <include>*.xml</include>
                    <include>*.txt</include>
                </includes>
                <excludes>
                    <exclude>local.properties</exclude>
                </excludes>
                <filtering>true</filtering>
            </resource>
        </resources>

    </build>


	<scm>
		<url>https://github.com/karlney/tetris-ai</url>
		<connection>scm:git:git://github.com/karlney/tetris-ai.git</connection>
		<developerConnection>scm:git:git@github.com/karlney/tetris-ai.git</developerConnection>
	</scm>


</project>
